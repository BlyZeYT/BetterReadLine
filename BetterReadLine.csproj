<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Authors>BlyZe</Authors>
    <PackageId>BlyZe.BetterReadLine</PackageId>
    <Description>An easy to use and highly customizable alternative for Console.ReadLine();</Description>
    <PackageProjectUrl>https://github.com/BlyZeYT/BetterReadLine</PackageProjectUrl>
    <RepositoryUrl>https://github.com/BlyZeYT/BetterReadLine</RepositoryUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>blyze;readline;read;betterreadline;betterread;better readline;inputreader;console;input reader;console.readline;better console.readline</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>2.0.0</Version>
    <PackageReleaseNotes>Reworked whole package and upgraded to .NET 7.
Versions before 2.0.0 will be deprecated.</PackageReleaseNotes>
    <Title>BlyZe.BetterReadLine</Title>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
